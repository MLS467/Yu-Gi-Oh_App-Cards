{
  "expo": {
    "name": "pdm",
    "slug": "pdm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash-icon.png",
    "scheme": "pdm",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/test.png",
      "resizeMode": "cover", // Tente "cover" se "contain" n√£o estiver funcionando
      "backgroundColor": "#09090B"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#09090B"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
